{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "../../", // ✅ include libs/** and apps/**
    "composite": false, // ✅ override base; apps don't emit
    "declarationMap": false, // ✅ disable since composite is false
    "jsx": "preserve",
    "noEmit": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@app-test2/shared-components": [
        "../../lib/shared-components/src/index.ts"
      ],
      "@elyope/db": ["../../lib/db/src/index.ts"]
    },
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "references": [
    { "path": "../../lib/db" },
    { "path": "../../lib/shared-components" }
  ],
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "postcss.config.js",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../dist/apps/veterinarian/.next/types/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    ".next",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
